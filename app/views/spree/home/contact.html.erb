<div class="ui divider lonelyDivider"></div>

<h3 class="ui center aligned header">
  <span class="discreteText">
    Nous Contacter
  </span>
</h3>

<% @new_contact = Contact.new %>
<%= form_tag({controller: 'spree/home', action: 'send_contact_message'}, method: 'post', class: 'ui form') do %>
      <div class="field">
        <label><%= label_tag :company_name %></label>
        <%= text_field(:contact, :company_name) %>
      </div>
      <div class="field">
        <label><%= label_tag :email %></label>
        <%= text_field(:contact, :email) %>
      </div>
      <div class="field">
        <label><%= label_tag :phone %></label>
        <%= text_field(:contact, :phone) %>
      </div>
      <div class="field">
        <label><%= label_tag :message %></label>
        <%= text_area(:contact, :message) %>
      </div>
      <%= submit_tag 'Envoyer', :class => 'ui fluid large teal submit button' %>

<% end %>

