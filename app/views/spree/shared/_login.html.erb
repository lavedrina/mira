

<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path, html: { class: "ui form" } do |f| %>

      <div class="field">
        <%= f.label :email, Spree.t(:email) %><br />
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, tabindex: 1, autofocus: true %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, Spree.t(:password) %>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, class: 'title', tabindex: 2 %>
        </div>
      </div>
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, Spree.t(:remember_me) %>
        </div>
      </div>
  <%= f.submit Spree.t(:login), :class => 'ui fluid large teal submit button', tabindex: 4 %>
    <% end %>



