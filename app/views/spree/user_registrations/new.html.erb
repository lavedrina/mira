<% @body_id = 'signup' %>

<%= render 'spree/shared/error_messages', target: resource %>

<div id="new-customer">
  <h3 class="specificFont"><%= Spree.t(:new_customer) %></h3>

  <div data-hook="signup">
    <%= form_for resource, as: :spree_user, url: spree.registration_path(resource), html: { class: "ui form" } do |f| %>
      <div data-hook="signup_inside_form">
        <%= render partial: 'spree/shared/user_form', locals: { f: f } %>
        <p><%= f.submit Spree.t(:create),:class => 'ui fluid large teal submit button' %></p>
      </div>
    <% end %>
    <%= Spree.t(:or) %>&nbsp;<%= link_to Spree.t(:login_as_existing), spree.login_path %>

  </div>

</div>

<div data-hook="login_extras"></div>
