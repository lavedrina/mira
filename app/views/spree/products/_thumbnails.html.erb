<%# no need for thumbnails unless there is more than one image %>
<% if (@product.images + @product.variant_images).uniq.size > 1 %>
  <div id="product-thumbnails" class="thumbnails ui tiny images" data-hook>
    <% @product.images.each do |i| %>
      <div class='ui image tmb-all tmb-<%= i.viewable.id %>'>
        <%= link_to(image_tag(i.attachment.url(:mini), class: 'realThumbPicture normalBorder'), i.attachment.url(:product)) %>
      </div>
    <% end %>

    <% if @product.has_variants? %>
      <% @product.variant_images.each do |i| %>
        <% next if @product.images.include?(i) %>
        <div class='vtmb tmb-<%= i.viewable.id %>'>
          <%= link_to(image_tag(i.attachment.url(:mini)), i.attachment.url(:product)) %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

